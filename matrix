#readMatrix funct#
function readmtrx(){
while read mtrx
do
	echo "$mtrx"
done < $1
#$1 because its the first argument within scope#
}


#argument 1 from user, identifies what function they would like to use (dims, transpose etc)
#, and the rest passes the matrices to the arguments 
$1 "${@:2}"


